<style>
    .top-search-bar {
        width: 100%;
        padding: 20px;
        background-color: #f5f5f5;
        border-bottom: 1px solid #ddd;
        display: flex;
        justify-content: center;
    }

    .search-input {
        width: 100%;
        max-width: 400px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1em;
    }

    .page-container {
        display: flex;
        width: 100%;
    }

    /* Sidebar styles */
    .side-nav {
        width: 260px;
        padding: 20px;
        background: linear-gradient(135deg, #e3f2fd, #bbdefb);
        border-right: 1px solid #ccc;
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        position: sticky;
        top: 0;
        height: 100vh;
        font-family: Arial, sans-serif;
    }

    .side-nav h2 {
        font-size: 1.4em;
        color: #1976d2;
        text-align: center;
        margin-top: 0;
        margin-bottom: 20px;
    }

    .side-nav form {
        display: flex;
        flex-direction: column;
    }

    .side-nav .filter-group {
        margin-bottom: 20px;
    }

    .side-nav label {
        font-size: 1em;
        font-weight: 600;
        color: #0d47a1;
        margin-bottom: 5px;
        display: flex;
        align-items: center;
    }

    .side-nav label svg {
        margin-right: 8px;
        fill: #0d47a1;
    }

    .side-nav .filter-select,
    .side-nav .filter-radio {
        font-size: 1em;
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #90caf9;
        background-color: #ffffff;
        transition: all 0.3s ease;
        width: 100%;
    }

    .side-nav .filter-select:focus {
        border-color: #1976d2;
        box-shadow: 0 0 5px rgba(25, 118, 210, 0.3);
    }

    .side-nav .filter-radio {
        display: flex;
        align-items: center;
        padding: 8px 0;
    }

    .side-nav .filter-radio input {
        margin-right: 8px;
    }

    .side-nav .filter-buttons {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 10px;
    }

    .side-nav .filter-button,
    .side-nav .reset-button {
        width: 100px;
        padding: 8px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s;
    }

    .side-nav .filter-button {
        background-color: #1976d2;
        color: white;
    }

    .side-nav .filter-button:hover {
        background-color: #0d47a1;
    }

    .side-nav .reset-button {
        background-color: #ef5350;
        color: white;
    }

    .side-nav .reset-button:hover {
        background-color: #d32f2f;
    }

    /* Main content for book cards */
    .content {
        flex-grow: 1;
        padding: 20px;
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;
    }

    .book-card {
        border: 1px solid #ccc;
        border-radius: 8px;
        margin: 10px;
        padding: 20px;
        width: 230px;
        height: 270px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        justify-content: flex-start
    }

    .book-title {
        font-size: 1.1em;
        margin: 0;
    }

    .book-button {
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 5px;
        cursor: pointer;
        width: 100%;
    }

    .pagination-controls {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 20px 0;
        gap: 10px;
    }

    .pagination-button {
        padding: 8px 12px;
        background-color: #007bff;
        color: #fff;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s;
    }

    .pagination-button:hover {
        background-color: #0056b3;
    }

    /* Styling for Min and Max Price Fields */
    .filter-select {
        font-size: 1em;
        padding: 8px;
        border-radius: 4px;
        border: 1px solid #90caf9;
        background-color: #ffffff;
        transition: all 0.3s ease;
        width: 100%;
        margin-bottom: 10px;
    }

    .filter-select:focus {
        border-color: #1976d2;
        box-shadow: 0 0 5px rgba(25, 118, 210, 0.3);
    }
</style>
<div class="top-search-bar">
    <input type="text" id="searchInput" class="search-input" placeholder="Search by book title..."
        oninput="filterBooks()" />
</div>

<div class="page-container">
    <!-- Sidebar for Filters -->
    <aside class="side-nav">
        <h2>Filter Options</h2>
        <form method="GET" action="/">
            <div class="filter-group">
                <label for="author">
                    <!-- SVG icon for author -->
                    <svg width="16" height="16" xmlns="http://www.w3.org/2000/svg">
                        <path
                            d="M8 8c2.21 0 4-1.79 4-4S10.21 0 8 0 4 1.79 4 4s1.79 4 4 4zm0 1c-2.67 0-8 1.34-8 4v3h16v-3c0-2.66-5.33-4-8-4z" />
                    </svg>
                    Select Author:
                </label>
                <select name="author" id="author" class="filter-select">
                    <option value="all" <% if (selectedAuthor==='all' ) { %>selected<% } %>>All Authors</option>
                    <% authors.forEach(author=> { %>
                        <option value="<%= author %>" <% if (selectedAuthor===author) { %>selected<% } %>><%= author %>
                        </option>
                        <% }) %>
                </select>
            </div>

            <div class="filter-group">
                <label>
                    <!-- SVG icon for availability -->
                    <svg width="16" height="16" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 6.41L10.59 5 7 8.59 5.41 7 4 8.41 7 11.41z" />
                    </svg>
                    Filter by Availability:
                </label>
                <label class="filter-radio">
                    <input type="radio" name="filter" value="all" <% if (filter==='all' ) { %>checked<% } %>> All Books
                </label>
                <label class="filter-radio">
                    <input type="radio" name="filter" value="available" <% if (filter==='available' ) { %>checked<% } %>
                        > Available Books
                </label>
            </div>
            <!-- Min and Max Price Filter -->
            <div class="filter-group">
                <label for="minPrice">
                    <!-- SVG icon for price range -->
                    <svg width="16" height="16" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 6.41L10.59 5 7 8.59 5.41 7 4 8.41 7 11.41z" />
                    </svg>
                    Price Range:
                </label>
                <input type="number" name="minPrice" id="minPrice" class="filter-select" placeholder="Min Price"
                    value="<%= minPrice %>" min="0" step="0.01" />
                <input type="number" name="maxPrice" id="maxPrice" class="filter-select" placeholder="Max Price"
                    value="<%= maxPrice %>" min="0" step="0.01" />
            </div>


            <div class="filter-buttons">
                <button type="submit" class="filter-button">Filter</button>
                <button type="button" class="reset-button" onclick="window.location.href='/'">Reset</button>
            </div>
        </form>
    </aside>

    <!-- Main Content Area for Book Cards -->
    <div class="content">
        <% if (books.length> 0) { %>
            <% books.forEach(book=> { %>
                <div class="book-card">
                    <h3 class="book-title">
                        <%= book.title %>
                    </h3>
                    <p>Author: <%= book.author %>
                    </p>
                    <p>Published: <%= book.publishedDate %>
                    </p>
                    <p>Available: <%= book.available %>
                    </p>
                    <p>Cost: <%= book.price %>
                    </p>
                    <button class="book-button">View Details</button>
                </div>
                <% }) %>
                    <% } else { %>
                        <p>No books available.</p>
                        <p>Please change your filters to see more options.</p>
                        <% } %>
    </div>
</div>

<div class="pagination-controls">
    <% if (currentPage> 1) { %>
        <a href="/?page=<%= currentPage - 1 %>&filter=<%= filter %>&author=<%= selectedAuthor %>"
            class="pagination-button">Previous</a>
        <% } %>

            <span>Page <%= currentPage %> of <%= totalPages %></span>

            <% if (currentPage < totalPages) { %>
                <a href="/?page=<%= currentPage + 1 %>&filter=<%= filter %>&author=<%= selectedAuthor %>"
                    class="pagination-button">Next</a>
                <% } %>
</div>

<script>
    function filterBooks() {
        // Get the search input and convert it to lowercase for case-insensitive matching
        const searchInput = document.getElementById('searchInput').value.toLowerCase();
        const books = document.querySelectorAll('.book-card');

        // Loop through each book card and show/hide based on title match
        books.forEach(book => {
            const title = book.querySelector('.book-title').textContent.toLowerCase();
            if (title.includes(searchInput)) {
                book.style.display = 'block';
            } else {
                book.style.display = 'none';
            }
        });
    }
</script>